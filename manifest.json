{
  "manifest_version": 3,
  "name": "Prompt Monitoring Extension",
  "version": "1.0.0",
  "description": "Monitors ChatGPT prompts, detects and anonymizes email addresses.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Prompt Monitoring Extension" },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage.js"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
    }
  ]
}